<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="3dp"
    android:background="@color/colorWhite">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_rank_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_user_default_avatar"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorBg"/>
    <TextView
        android:id="@+id/id_rank_index"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:text="1"/>
    <ImageView
        android:id="@+id/id_rank_king_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/id_rank_index"
        android:src="@drawable/ic_rank_icon" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/id_rank_avatar"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/id_rank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:layout_marginLeft="2dp"
            android:textColor="@color/colorBlack"
            android:text="昵称"/>
        <TextView
            android:id="@+id/id_rank_identification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="5dp"
            android:layout_below="@id/id_rank_name"
            android:text="@string/str_integral"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/id_user_rank_identification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/id_rank_name"
            android:textSize="13dp"
            android:layout_toRightOf="@id/id_rank_identification_text"
            android:text="0"/>
    </RelativeLayout>
</RelativeLayout>